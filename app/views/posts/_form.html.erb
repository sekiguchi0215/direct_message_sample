<%= form_with model: @post, local: true do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content, required: true %>
  <%= f.radio_button :status, :public %>
  <%= f.label :status, "公開" %>
  <%= f.radio_button :status, :privete %>
  <%= f.label :status, "非公開" %>
  <%= f.submit "送信" %>
<% end %>
