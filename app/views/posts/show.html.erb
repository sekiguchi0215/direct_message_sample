<h1>投稿詳細</h1>
<p>【メールアドレス】<%= @post.user.email %></p>
<p>【内容】<%= @post.content %></p>
<% if @post.user_id == current_user.id %>
  <% if @post.status == "public" %>
    <p>【公開 / 非公開】<span style="color: limegreen;"><%= @post.status %></span></p>
  <% else %>
    <p>【公開 / 非公開】<span style="color: red;"><%= @post.status %></span></p>
  <% end %>
<% end %>
<p>【作成日時】<%= l @post.created_at %></p>
<p>
  <%= link_to "編集", edit_post_path(@post) %>
  <%= link_to "削除", post_path(@post), method: :delete, data: { confirm: "削除しますか？" } %>
</p>
<p><%= link_to "投稿一覧へ", root_path %></p>
