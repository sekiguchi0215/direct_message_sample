<div>
  <p>【メールアドレス】<%= post.user.email %></p>
  <p>【内容】<%= post.content %></p>
  <% if post.user_id == current_user.id %>
    <p>
      <%= link_to "詳細", post %>
      <%= link_to "編集", edit_post_path(post) %>
      <%= link_to "削除", post_path(post), method: :delete, data: { confirm: "削除しますか？" } %>
    </p>
  <% end %>
</div>
<hr>
