<h1><%= @user.email %>さんの投稿一覧</h1>
<table>
  <thead>
    <tr>
      <th scope="col">【内容】</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td>
          <% if @user.id == current_user.id %>
            <% if post.status == "public" %>
              <span style="color: limegreen;"><%= post.status %></span>
            <% else %>
              <span style="color: red;"><%= post.status %></span>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if @user.id == current_user.id %>
            <%= link_to "詳細", post %>
            <%= link_to "編集", edit_post_path(post) %>
            <%= link_to "削除", post_path(post), method: :delete, data: { confirm: "削除しますか？" } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% unless @user.id == current_user.id %>
  <% if @haveRoom == true %>
    <%= link_to "ダイレクトメッセージ", room_path %>
  <% else %>
    <%= form_with model: @room, local: true do |f| %>
      <%= fields_for @userEntry do |r| %>
        <%= r.hidden_field :user_id, value: @user.id %>
      <% end %>
      <%= f.submit "チャットを始める" %>
    <% end %>
  <% end %>
<% end %>
